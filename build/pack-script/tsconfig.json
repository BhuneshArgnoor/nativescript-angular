{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "types": [
            "node"
        ],
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ],
        "strict": false
    }
}